{
  "name": "@repo/api",
  "sideEffects": false,
  "exports": {
    "./app": {
      "import": {
        "default": "./dist/hc.js",
        "types": "./dist/hc.d.ts"
      }
    }
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc"
  },
  "dependencies": {
    "@hono/node-server": "1.14.1",
    "hono": "4.7.9"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@repo/eslint-config": "workspace:*",
    "tsx": "4.19.2",
    "typescript": "5.8.3",
    "lint-staged": "15.2.7"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "bash -c 'tsc --noEmit'",
      "prettier . --ignore-path ../../.gitignore --write --log-level silent"
    ],
    "*.{md,json}": [
      "prettier . --ignore-path ../../.gitignore --write --log-level silent"
    ]
  }
}
